<Configuration>
    <Appenders>
        <File name="CARBON_LOGFILE" fileName="repository/logs/wso2carbon.log">
            <PatternLayout pattern="TID: [%d] %5p {%c} - %m {%c}%n"/>
        </File>
        <Console name="CARBON_CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d] %5p {%c} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.eclipse.equinox" level="off"/>
        <Root level="info">
            <AppenderRef ref="CARBON_CONSOLE"/>
            <AppenderRef ref="CARBON_LOGFILE"/>
        </Root>
    </Loggers>
</Configuration>