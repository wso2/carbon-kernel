<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-kernel-dependents</artifactId>
        <version>4.3.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.ws.commons.axiom.wso2</groupId>
    <artifactId>axiom</artifactId>
    <packaging>bundle</packaging>
    <name>axiom.wso2</name>
    <version>1.2.11.wso2v5</version>
    <description>
        org.wso2.carbon.axiom. This bundle will contain all axiom
        releated packages. This also include xml-apis, xml-resolver,
    </description>
    <url>http://wso2.org</url>

    <dependencies>
    
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
            <version>${javax.mail.version}</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-impl</artifactId>
            <version>${axiom.version}</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-stax-api_1.0_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-javamail_1.4_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-activation_1.1_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.codehaus.woodstox</groupId>
                    <artifactId>wstx-asl</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-dom</artifactId>
            <version>${axiom.version}</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-stax-api_1.0_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-javamail_1.4_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-activation_1.1_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.codehaus.woodstox</groupId>
                    <artifactId>wstx-asl</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
	
	    <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-api</artifactId>
            <version>${axiom.version}</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-stax-api_1.0_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-javamail_1.4_spec</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-activation_1.1_spec</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        
        <dependency>
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>${dom4j.version}</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>xml-apis</groupId>
                    <artifactId>xml-apis</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${maven.bundle.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
			    org.apache.axiom.*; version="${exp.pkg.version.axiom}";-split-package:=merge-first,
			    org.jaxen.*; version=${jaxen.version},
                            javax.mail;version=${javax.mail.version};-split-package:=merge-first,
                            javax.mail.event;version=${javax.mail.version};-split-package:=merge-first,
                            javax.mail.internet;version=${javax.mail.version};-split-package:=merge-first,
                            javax.mail.search;version=${javax.mail.version};-split-package:=merge-first,
                            javax.mail.util;version=${javax.mail.version};-split-package:=merge-first,
                            com.sun.mail.imap;version=${javax.mail.version},
                            com.sun.mail.pop3;version=${javax.mail.version},
                            com.sun.mail.smtp;version=${javax.mail.version},
                            org.dom4j.*; version=${dom4j.version},
                        </Export-Package>
                        <Import-Package>
                            !org.apache.axiom.*; version="${exp.pkg.version.axiom}",
                            !org.jaxen.*; version=${jaxen.version},
                            !javax.mail;version=${javax.mail.version},
                            !javax.mail.event;version=${javax.mail.version},
                            !javax.mail.internet;version=${javax.mail.version},
                            !javax.mail.search;version=${javax.mail.version},
                            !javax.mail.util;version=${javax.mail.version},
                            !com.sun.mail.imap;version=${javax.mail.version},
                            !com.sun.mail.pop3;version=${javax.mail.version},
                            !com.sun.mail.smtp;version=${javax.mail.version},
                            !org.dom4j.*; version=${dom4j.version},
                            org.xml.sax.*,
                            org.w3c.dom.*,
                            javax.xml.stream;version="1.0.1",
                            javax.xml.stream.events;version="1.0.1",
                            javax.xml.stream.util;version="1.0.1",
			                javax.xml.bind.*;version="2.1.0";resolution:=optional,
                            javax.xml.datatype,
                            javax.xml.parsers,
                            javax.xml.transform.*,
                            javax.xml.validation,
                            javax.xml.xpath,
                            javax.xml,
                            *;resolution:=optional
                        </Import-Package>
                        <Private-Package>
                            com.sun.mail.handlers,
                            com.sun.mail.iap,
                            com.sun.mail.imap.protocol,
                            com.sun.mail.util
                        </Private-Package>
                        <Include-Resource>
                            @mail-${javax.mail.version}.jar!/META-INF/javamail.charset.map,
                            @mail-${javax.mail.version}.jar!/META-INF/javamail.default.address.map,
                            @mail-${javax.mail.version}.jar!/META-INF/javamail.default.providers,
                            @mail-${javax.mail.version}.jar!/META-INF/mailcap,
                        </Include-Resource>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <axiom.version>${version.axiom}</axiom.version>
        <jaxen.version>${version.jaxen}</jaxen.version>
        <javax.mail.version>1.4</javax.mail.version>
        <dom4j.version>1.6.1</dom4j.version>
        <maven.bundle.plugin.version>1.4.0</maven.bundle.plugin.version>
    </properties>

</project>
