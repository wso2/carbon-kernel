<!-- services.xml of sample-1 : No Security-->
<serviceGroup>

    <service name="KeyStoreAdminService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.security.keystore.service.KeyStoreAdminServiceImpl
        </parameter>
        <operation name="getKeyStores">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/configure/security,/permission/admin/manage/modify/service</parameter>
        </operation>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/configure/security</parameter>
    </service>
    
    <service name="SecurityAdminService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.security.config.service.SecurityConfigAdminService
        </parameter>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/modify/service</parameter>
    </service>
    
    <service name="STSAdminService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.security.sts.service.STSAdminServiceImpl
        </parameter>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/configure/security</parameter>
    </service>
    <parameter name="adminService" locked="true">true</parameter>
    <parameter name="hiddenService" locked="true">true</parameter>
</serviceGroup>
